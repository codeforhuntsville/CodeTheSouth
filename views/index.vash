    <script type="text/javascript">
		$(document).ready(function() {
			$('#fullpage').fullpage({
				anchors: ['home', 'cts', 'gettingStarted', 'contactUs'],
				sectionsColor: ['#fff', '#7E8F7C', '#0a1823', '#aaa'],
				scrollOverflow: true,
        scrollBar: true
			});
		});
    </script>
